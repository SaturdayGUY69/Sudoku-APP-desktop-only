<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ninad.sudoku.ui.GameScreenController"
           prefWidth="600" prefHeight="700">

    <BorderPane prefWidth="600" prefHeight="700">

        <!-- Top: Timer and Score -->
        <top>
            <HBox spacing="30" style="-fx-padding: 20;" alignment="center">
                <Label fx:id="timerLabel" text="00:00" style="-fx-font-size: 20px;"/>
                <Label fx:id="scoreLabel" text="Score: 0" style="-fx-font-size: 20px;"/>
                <Button fx:id="pauseButton" text="Pause" style="-fx-font-size: 16px;"/>
            </HBox>
        </top>

        <!-- Center: Sudoku grid -->
        <center>
            <GridPane fx:id="sudokuGrid" hgap="2" vgap="2"
                      style="-fx-padding: 20; -fx-alignment: center;"/>
        </center>

        <!-- Bottom: Control Buttons -->
        <bottom>
            <HBox spacing="20" alignment="center" style="-fx-padding: 20;">
                <!-- Removed Give Up button from bottom -->
            </HBox>
        </bottom>

    </BorderPane>

    <!-- Pause Overlay -->
    <VBox fx:id="pauseOverlay" alignment="CENTER" spacing="20"
          style="-fx-background-color: rgba(0,0,0,0.6); -fx-padding: 40; -fx-border-radius: 10; -fx-background-radius: 10;"
          visible="false">

        <Label text="PAUSED" style="-fx-font-size: 36px; -fx-text-fill: white;"/>

        <VBox spacing="10" alignment="CENTER"
              style="-fx-background-color: rgba(255,255,255,0.15); -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;">
            <Label fx:id="pauseTimerLabel" text="Time: 00:00" style="-fx-font-size: 20px; -fx-text-fill: white;"/>
            <Label fx:id="pauseMovesLabel" text="Moves: 0" style="-fx-font-size: 20px; -fx-text-fill: white;"/>
        </VBox>

        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="overlayResumeButton" text="Resume" prefWidth="120"/>
            <Button fx:id="overlayGiveUpButton" text="Give Up" prefWidth="120"/>
        </HBox>

    </VBox>

</StackPane>
